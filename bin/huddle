#!/usr/bin/env node

var optimist = require("optimist"),
    huddle = require("../lib/huddle").huddle,
    argv = optimist
        .usage("Pack and compress css and javascript.\nUsage: $0")
        .options("i", {
            alias: "input",
            describe: "The input html file",
            default: "index.html"
        })
        .options("o", {
            alias: "output",
            describe: "The output html file",
            default: "index-min.html"
        })
        .options("h", {
            alias: "help",
            describe: "Show this message"
        })
        .argv;

if (argv.h) {
    optimist.showHelp();
    process.exit(1);
}

huddle(argv.i, argv.o);
